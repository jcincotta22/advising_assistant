<div class="container">
  <div class="row">
    <div class="col s12 m8 offset-m2">
      <%= render 'layouts/errors' %>
    </div>
  </div>

  <%= form_for [@advisee, @graduation_plan] do |f| %>
    <div class="row">
      <div class="col s12 m8 offset-m2">
        <div class="input-field">
          <%= f.text_field :name %>
          <%= f.label :name, class: 'active' %>
        </div>

        <div class="input-field">
          <%= f.submit 'Save Graduation Plan', class: 'btn standard' %>
        </div>
      </div>
    </div>

    <div class="row center">
      <div class="col s12 m6">

      </div>
    </div>
  <% end %>

</div>
