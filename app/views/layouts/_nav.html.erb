<ul id="user_dropdown" class="dropdown-content">
  <li><%= link_to 'Edit Account Info', edit_user_registration_path %></li>

  <% if !current_user.identities.where(provider: 'google_oauth2').first %>
    <li>
      <%= link_to 'Link Google Account', '/auth/google_oauth2' %>
    </li>
  <% else %>
    <li>
      <%= link_to 'View Calendars', api_v1_google_calendars_path %>
    </li>
  <% end %>
</ul>

<nav>
   <div class="nav-wrapper">
     <ul>
       <li><a href="/" class="brand-logo">Advising Assistant</a></li>
     </ul>

     <ul id="nav-mobile" class="right hide-on-med-and-down">
       <% if current_user %>
         <li><%= link_to 'Advisees', advisees_path %></li>
         <li>
           <a class="dropdown-button"
              href="#!"
              data-activates="user_dropdown">
              <%= current_user.email %>
              <i class="material-icons right">arrow_drop_down</i>
            </a>
         </li>
         <li>
           <%= link_to "Sign Out",
                       destroy_user_session_path,
                       method: :delete,
                       class: 'waves-effect waves-light btn danger' %>
         </li>
       <% else %>
         <li>
           <%= link_to "Sign Up", new_user_registration_path, class: 'btn primary-color' %>
         </li>
         <li>
           <%= link_to "Sign In", new_user_session_path, class: 'btn' %>
         </li>
       <% end %>
     </ul>
   </div>
 </nav>
